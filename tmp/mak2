SOURCE = $(wildcard *.c)
CPP_FILES = $(shell ls *.cpp)
BASE = $(basename $(CPP_FILES))
OBJS = $(addsuffix .o, $(addprefix obj/,$(BASE)))
 
$(TARGET):$(OBJS)
    -rm -f $@
    gcc -o $(TARGET)$(OBJS)
 
obj/%.o:%.cpp
    @if test ! -d"obj"; then\
    mkdir -pobj;\
    fi;
    g++ -c -o $@ $<
 
clean:
    -rm -f test
    -rm -f obj/*.o